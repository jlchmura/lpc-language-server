{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "sourceMap": true,
        "strict": false,
        "outDir": "out",
        "rootDir": "src",
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "out",
        "composite": false,
        "strictBindCallApply": false,
        "noImplicitOverride": false,        
    },
    "include": ["src"], 
    "exclude": ["node_modules", ".vscode-test", "tests"]
}
