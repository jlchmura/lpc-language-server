{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "es2020",
        "esModuleInterop": true,
        "lib": ["es2020"],        
        "outDir": "out",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "skipLibCheck": true,
        "newLine": "lf",
        "preserveConstEnums": true,
        "pretty": true,
        "noImplicitOverride": false,        
        "declaration": true,        
        "declarationDir": "./out"
    },    
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"],
    "references": [{ "path": "./client" }, { "path": "./server" }]
}
